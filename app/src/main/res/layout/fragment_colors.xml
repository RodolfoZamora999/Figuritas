<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewGroupColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".iu.config.ColorsFragment"
    tools:background="@color/AMBER_BACKGROUND">


    <TextView
        android:id="@+id/txtTitleColor"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#5C6BC0"
        android:text="@string/seleccionar_color"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/AMBER"/>

    <ImageView
        android:id="@+id/color1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:alpha="0"
        android:background="@color/AMBER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleColor"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:alpha="0"
        android:background="@color/ORANGE"
        app:layout_constraintBottom_toBottomOf="@+id/color1"
        app:layout_constraintStart_toEndOf="@+id/color1"
        app:layout_constraintTop_toTopOf="@+id/color1"
        app:layout_constraintVertical_bias="0.0"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:alpha="0"
        android:background="@color/PINK"
        app:layout_constraintBottom_toBottomOf="@+id/color2"
        app:layout_constraintStart_toEndOf="@+id/color2"
        app:layout_constraintTop_toTopOf="@+id/color2"
        app:layout_constraintVertical_bias="0.0"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:background="@color/WHITE"
        app:layout_constraintEnd_toEndOf="@+id/color1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/color1"
        app:layout_constraintTop_toBottomOf="@+id/color1"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:background="@color/GREEN"
        app:layout_constraintEnd_toEndOf="@+id/color2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/color4"
        app:layout_constraintTop_toBottomOf="@+id/color2"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:background="@color/CYAN"
        app:layout_constraintEnd_toEndOf="@+id/color3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/color5"
        app:layout_constraintTop_toBottomOf="@+id/color3"
        tools:alpha="1" />


    <ImageView
        android:id="@+id/color7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:alpha="0"
        android:background="@color/RED"
        app:layout_constraintStart_toEndOf="@+id/color3"
        app:layout_constraintTop_toTopOf="@+id/color3"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/color8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:background="@color/LIGHT_BLUE"
        app:layout_constraintBottom_toBottomOf="@+id/color6"
        app:layout_constraintStart_toEndOf="@+id/color6"
        app:layout_constraintTop_toBottomOf="@+id/color7"
        tools:alpha="1" />

    <Button
        android:id="@+id/btnNextColor"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginBottom="4dp"
        android:text="@string/btn_siguiente"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/WHITE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@color/AMBER_ANALOGO"/>

</androidx.constraintlayout.widget.ConstraintLayout>