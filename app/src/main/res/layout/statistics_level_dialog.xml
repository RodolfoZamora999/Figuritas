<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@color/AMBER"
        android:gravity="center"
        android:text="@string/nivel_completado"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleDialog"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="@+id/txtTitleDialog"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/ic_timer" />

    <TextView
        android:id="@+id/txtTimerDialog"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.516"
        tools:text="Tiempo total: 00:00"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_monedas" />

    <TextView
        android:id="@+id/txtBonusDialog"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.516"
        tools:text="Bonificación: 000"/>

    <Button
        android:id="@+id/btnNextLevelDialog"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/background_button"
        android:text="Presiona aquí para continuar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleDialog"
        app:layout_constraintStart_toStartOf="@+id/txtTitleDialog"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDialog" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="@string/resumen_nivel"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/ORANGE"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleDialog"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTitleDialog"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDialog" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/txtShapesCountDialog"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Total de figuras: 10"/>

</androidx.constraintlayout.widget.ConstraintLayout>